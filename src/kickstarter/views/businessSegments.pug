extends layout

block scripts
    -var isVuePage = true

block content
    .jumbotron
        .container
            h1 Business Segment configuration

            p Specify the Business Segments .

    .container


        div(id="vueBase")
            wicked-default-business-segment(v-model="glob" v-bind:businessSegments="businessSegments")
            br
            wicked-business-segments(v-model="businessSegments")
            br
            nav-buttons(this-page="businessSegment")

block afterScripts
    script(type="text/javascript").
        const injectedData = {
            businessSegments: !{JSON.stringify(businessSegments)},
            glob: !{JSON.stringify(glob)}
        };

    script(src='/js/businessSegment.js')
