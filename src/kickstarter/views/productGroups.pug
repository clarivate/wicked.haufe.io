extends layout

block scripts
    -var isVuePage = true

block content
    .jumbotron
        .container
            h1 Product Group configuration

            p Specify the Product Groups .

    .container


        div(id="vueBase")
            wicked-default-product-group(v-model="glob" v-bind:productGroups="productGroups")
            br
            wicked-product-groups(v-model="productGroups")
            br
            nav-buttons(this-page="productGroups")

block afterScripts
    script(type="text/javascript").
        const injectedData = {
            productGroups: !{JSON.stringify(productGroups)},
            glob: !{JSON.stringify(glob)}
        };

    script(src='/js/productGroups.js')
